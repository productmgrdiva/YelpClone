<h2>Add a review:</h2>
<%= form_for([@restaurant, @restaurant.reviews.build]) do |f| %>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.select :rating, options_for_select(%w[1 2 3 4 5]) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', restaurants_path %>
| <%= link_to 'Edit', edit_restaurant_path(@restaurant) %>